<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ItemPeopleViewModel"
            type="com.andrew.samir.manastmovies.adapters.ItemPeopleViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:onClick="@{ItemPeopleViewModel::onItemClick}"
            android:orientation="horizontal"
            android:weightSum="4"
            tools:ignore="UnusedAttribute">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="left"
                android:textStyle="bold|italic"
                android:padding="5dp"
                android:text="@{ItemPeopleViewModel.categoryName}"
                android:textColor="#000"
                android:textSize="16sp"
                tools:text="asdds"
                tools:ignore="RtlHardcoded" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher"
                app:imageUrl="@{ItemPeopleViewModel.imageUrl}"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>